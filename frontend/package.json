{
  "name": "frontend",
  "private": true,
  "type": "module",
  "main": "build/main.js",
  "description": "",
  "author": "",
  "version": "25.2.3",
  "build": {
    "productName": "CodeMachine",
    "artifactName": "${productName}-v${version}-${os}-${arch}.${ext}",
    "mac": {
      "target": "dmg",
      "icon": "src/assets/code-machine-logo.png"
    },
    "linux": {
      "target": "AppImage"
    },
    "win": {
      "target": "msi",
      "signAndEditExecutable": false,
      "icon": "public/code-machine-logo.ico"
    },
    "msi": {
      "oneClick": false,
      "runAfterFinish": false
    },
    "files": [
      "./build/**/*"
    ],
    "extraResources": [
      "module-electron/Accumulator_CPU_Chisel-assembly-0.1.0.jar"
    ]
  },
  "scripts": {
    "build": "react-router build --mode website",
    "build:electron": "react-router build --mode electron && vite build -c vite.config.electron.ts",
    "dev": "react-router dev --mode website",
    "dev:electron": "electron .",
    "package": "electron-builder",
    "package:x64": "electron-builder --x64",
    "package:arm64": "electron-builder --arm64",
    "start": "vite preview",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vitest watch",
    "test:headless": "vitest --browser.headless",
    "coverage": "npm run test:headless -- --coverage --coverage.provider v8 -r src"
  },
  "dependencies": {
    "@react-router/node": "^7.6.2",
    "@react-router/serve": "^7.6.2",
    "electron-is-dev": "^3.0.1",
    "isbot": "^5.1.28",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.6.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@react-router/dev": "^7.6.2",
    "@tailwindcss/vite": "^4.1.10",
    "@types/node": "^24",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/browser": "^3.2.3",
    "@vitest/coverage-v8": "^3.2.3",
    "eslint": "^9.29.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "playwright": "^1.53.0",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.3",
    "vitest-browser-react": "^0.2.0"
  }
}
